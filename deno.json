{
  "tasks": {
    "dev": "deno run --allow-read --allow-env --allow-net --allow-sys --watch server.ts"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "mongoose": "npm:mongoose@8.16.1",
    "mongoose-sequence": "npm:mongoose-sequence@6.0.1",
    "@zarco/isness": "jsr:@zarco/isness@^0.1.18",
    "express": "npm:express@^4.18.2",
    "morgan": "npm:morgan@^1.10.0"
  },
    "compilerOptions": {
    "strict": true,
    "lib": [
      "deno.ns",
      "deno.window"
    ]
  },
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [
        "require-await",
        "ban-untagged-console",
        "no-multi-spaces",
        "no-extra-semi"
      ],
      "exclude": [
        "no-namespace",
        "no-debugger",
        "no-explicit-any"
      ]
    }
  },
  "fmt": {
    "include": [
      "**/*.ts",
      "**/*.js",
      "**/*.json",
      "**/*.md"
    ],
    "options": {
      "useTabs": false,
      "lineWidth": 150,
      "indentWidth": 2,
      "singleQuote": true,
      "semiColons": false
    }
  }
}
